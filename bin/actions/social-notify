#!/usr/bin/env perl
use v5.10.0;
use strict;
use warnings;
use Exobrain;

# PODNAME: social-notify
# ABSTRACT: notify the user of all personal messages

my $exobrain = Exobrain->new;

$exobrain->watch_loop(
    class  => 'Measurement::Social',
    filter => sub { $_->to_me },
    then   => sub {
        $exobrain->notify( $_->summary );
    },
);

