#!/usr/bin/perl -w
use 5.010;
use strict;
use warnings;
use autodie;

# Send a notification every time we spot the user check-in.
# This is mostly useful for debugging, although with a tiny
# bit of work one could turn it into a creepy stalker plug-in.

use App::Exobrain;

my $exobrain = App::Exobrain->new;

$exobrain->watch_loop(
    class  => 'Measurement::Geo',
    filter => sub { $_->is_me },
    then   => sub {
        my $event = shift;
        $exobrain->notify($event->summary);
    },
);
