#!/usr/bin/perl -w
use 5.010;
use strict;
use warnings;
use autodie;

# Send a notification every time a bmndr data point is updated

use App::Exobrain;

my $exobrain = App::Exobrain->new;

$exobrain->watch_loop(
    class => 'Measurement::Beeminder',
    then => sub {
        my $event = shift;
        $exobrain->notify($event->summary);
    },
);
