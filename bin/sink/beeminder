#!/usr/bin/perl -w
use 5.010;
use strict;
use warnings;
use autodie;

use Exobrain;
use WebService::Beeminder;

my $exobrain = Exobrain->new;

my $config = $exobrain->config->{Beeminder};

my $bee = WebService::Beeminder->new(
    token => $config->{auth_token},
);

$exobrain->watch_loop(
    class => 'Intent::Beeminder',
    then  => sub {
        my $event = shift;
        $bee->add_datapoint(
            goal    => $event->goal,
            value   => $event->value,
            comment => $event->comment // "",
        );
    }
);
